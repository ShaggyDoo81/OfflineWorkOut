@page "/"

<OWOPageTitle>¡Empezamos!</OWOPageTitle>

<MudCard Style="background-color: var(--mud-palette-primary); color: var(--mud-palette-primary-text)">
    <MudCardContent>
        <MudStack Row="true">
            <MudIcon Icon="@CustomIcons.Medal" Size="Size.Large"></MudIcon>
            <MudStack Spacing="0" Style="margin-top: -0.5em;">
                <MudText>¡Vamos a empezar!</MudText>
                <MudText Typo="Typo.body2">Carga los datos de la hoja Excel para empezar.</MudText>
            </MudStack>
        </MudStack>
